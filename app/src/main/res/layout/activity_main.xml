<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:text="Email:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="50dp"
        android:text="Name:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignStart="@+id/email"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/favAnimal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:hint="Enter Animal"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_toEndOf="@+id/textView3"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="150dp"
        android:text="Favorite Animal"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Add"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/favAnimal"
        android:text="Add " />

    <Button
        android:id="@+id/View"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favAnimal"
        android:layout_toStartOf="@+id/Update"
        android:text="View " />

    <Button
        android:id="@+id/Update"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favAnimal"
        android:layout_toEndOf="@+id/id"
        android:text="Update " />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/id"
        android:layout_marginEnd="-47dp"
        android:layout_toStartOf="@+id/id"
        android:text="ID:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="209dp"
        android:layout_marginStart="47dp"
        android:ems="10"
        android:hint="Enter ID"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/Del"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_alignEnd="@+id/name"
        android:layout_alignTop="@+id/id"
        android:layout_marginEnd="15dp"
        android:text="Delete " />

    <TextView
        android:id="@+id/textView"
        android:layout_width="344dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="SqLite Assignment"
        android:textSize="30sp" />

</RelativeLayout>